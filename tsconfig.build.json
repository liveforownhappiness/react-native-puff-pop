{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib/module",
    "declarationDir": "./lib/typescript/src",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["lib", "**/__tests__"]
}
